<div class="row mt-5">
    <div class="col-md-12 m-auto">
        <div class="card card-body text-center">
            <h3 class="mt-2">Referral Link</h3>
        </div>
    </div>
</div>
<div class="row mt-5">
    <div class="col-md-12 m-auto">
        <div class="card card-body text-center">
            <div id="lkni" style="display: none;">
                <%- include ("./messages") %>
            </div>
            <div class="form-group">
                <label for=""></label>
                <input type="text" id="link" class="form-control">
            </div>
            <div>
                <label for=""></label>
                <button onclick="copy()" id="buttu" class="btn btn-primary btn-block">Copy Link</button>
            </div>
            <div>
                <label for=""></label>
                <button onclick="backe()" class="btn btn-primary btn-block">Go Back</button>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById("link").value = document.getElementById("lkni").innerText

    function backe() {
        window.history.back()
    }

    function copy() {
        document.getElementById("link").select();
        document.execCommand("copy");
        document.getElementById("buttu").innerHTML = "Copied";
        document.getElementById("buttu").disabled = true;
    }
</script>



